{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MoviNight",
  "version": "1.0.0",
  "identifier": "com.movinight.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MoviNight - Discover Movies & TV Shows",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "center": true,
        "focus": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
